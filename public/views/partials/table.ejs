<h1>Productos de Catalogo</h1>
<div class="entry">
    <% if (listProd.length == 0) { %>
        <h3>No se encontraron productos</h3>
    <% } else { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Imagen</th>
                    <th scope="col">Agregar/Eliminar al Carrito</th>
                </tr>
            </thead>
            <%listProd.forEach(prod => { %>
                <tbody id="trTable">
                    <tr id="product-<%= prod.id_articulo%>">
                        <td> <%= prod.id_articulo %> </td>
                        <td> <%= prod.title %> </td>
                        <td> <%= prod.price %> </td>
                        <td> <%= prod.category %> </td>
                        <td> <img src="<%= prod.thumbnail %>" alt="<%= prod.title %>" width="25"> </td>
                        <td> <button class="btn btn-outline-success" id="addProduct-<%= prod.id_articulo%>">+</button> <button class="btn btn-outline-danger" id="delProduct-<%= prod.id_articulo%>">-</button></td>
                    </tr>
                </tbody>
            <% }) %>
        </table>
    <button class="btn btn-outline-success" id="preBuy" >AÃ±adir al carrito</button> <p id="quantity"></p>
    <% } %>
</div>