<h1>Formulario Nuevo Producto</h1>
    <div class="form-group">
      <label for="id">ID:</label>
      <input type="number" class="form-control" id="id_articulo" name="id">
    </div>
    
    <div class="form-group">
      <label for="title">Título:</label>
      <input type="text" class="form-control" id="title" name="title">
    </div>
    
    <div class="form-group">
      <label for="price">Precio:</label>
      <input type="number" class="form-control" id="price" name="price">
    </div>
    
    <div class="form-group">
      <label for="thumbnail">URL de imagen:</label>
      <input type="text" class="form-control" id="thumbnail" name="thumbnail">
    </div>
    
    <div class="form-group">
      <label for="category">Categoría:</label>
      <select class="form-control" id="category" name="category">
        <option value="fruta">fruta</option>
        <option value="verdura">verdura</option>
        <option value="carne">carne</option>
      </select>
    </div>
    
    <div class="col">
        <button class="btn btn-outline-dark" id="saveP">Guardar</button>
    </div>
    <div class="col">
        <button class="btn btn-outline-dark" id="editP">Editar</button>
    </div>
    <div class="col">
        <button class="btn btn-outline-dark" id="delP">Borrar</button>
    </div>